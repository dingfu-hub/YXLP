{
  "name": "automated-tests",
  "version": "1.0.0",
  "description": "Automated test suite for intelligent news management system",
  "private": true,
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:api": "jest --testPathPattern=api",
    "test:ui": "jest --testPathPattern=ui",
    "test:security": "jest --testPathPattern=security",
    "test:performance": "jest --testPathPattern=performance",
    "test:all": "npm run test:api && npm run test:ui && npm run test:e2e",
    "report": "node scripts/generate-report.js",
    "setup": "node scripts/setup-test-data.js"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "chalk": "^4.1.2",
    "fast-xml-parser": "^4.3.2",
    "fs-extra": "^11.2.0",
    "jest": "^29.7.0",
    "lodash": "^4.17.21",
    "node-fetch": "^2.7.0",
    "xmldom": "^0.6.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/lodash": "^4.14.202",
    "@types/node": "^20.10.0",
    "@types/node-fetch": "^2.6.9",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src"
    ],
    "testMatch": [
      "**/__tests__/**/*.ts",
      "**/?(*.)+(spec|test).ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/types/**/*"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/src/setup/jest.setup.ts"
    ],
    "testTimeout": 30000
  }
}
