# 应用配置
NODE_ENV=development
PORT=3001

# 前端应用 URL
FRONTEND_URL=http://localhost:3000
ADMIN_URL=http://localhost:3002

# 数据库配置
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USERNAME=yxlp_user
DATABASE_PASSWORD=yxlp_password
DATABASE_NAME=yxlp_db
DATABASE_SSL=false

# Redis 配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_QUEUE_DB=1

# Elasticsearch 配置
ELASTICSEARCH_NODE=http://localhost:9200
ELASTICSEARCH_USERNAME=
ELASTICSEARCH_PASSWORD=

# JWT 配置
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_REFRESH_EXPIRES_IN=30d

# OAuth 配置
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# 邮件配置
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_FROM=noreply@yxlp.com

# 文件存储配置
STORAGE_TYPE=local # local | s3 | oss
UPLOAD_PATH=./uploads

# AWS S3 配置
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=yxlp-uploads

# 阿里云 OSS 配置
ALIYUN_ACCESS_KEY_ID=your-aliyun-access-key
ALIYUN_ACCESS_KEY_SECRET=your-aliyun-secret-key
ALIYUN_OSS_REGION=oss-cn-hangzhou
ALIYUN_OSS_BUCKET=yxlp-uploads

# CDN 配置
CDN_URL=https://cdn.yxlp.com

# 支付配置
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret
PAYPAL_MODE=sandbox # sandbox | live

# 新闻 API 配置
NEWS_API_KEY=your-newsapi-key
GNEWS_API_KEY=your-gnews-api-key

# OpenAI 配置
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4-turbo-preview

# Google Ads API 配置
GOOGLE_ADS_CLIENT_ID=your-google-ads-client-id
GOOGLE_ADS_CLIENT_SECRET=your-google-ads-client-secret
GOOGLE_ADS_DEVELOPER_TOKEN=your-developer-token
GOOGLE_ADS_CUSTOMER_ID=your-customer-id

# Meta Ads API 配置
META_APP_ID=your-meta-app-id
META_APP_SECRET=your-meta-app-secret
META_ACCESS_TOKEN=your-long-lived-access-token

# 限流配置
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# 监控配置
SENTRY_DSN=your-sentry-dsn

# 日志配置
LOG_LEVEL=info
LOG_FILE=logs/app.log

# 缓存配置
CACHE_TTL=300

# 会话配置
SESSION_SECRET=your-session-secret
SESSION_MAX_AGE=86400000

# 安全配置
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# 国际化配置
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,zh,es,fr,de,ja,ko

# SEO 配置
SITE_NAME=YXLP Platform
SITE_DESCRIPTION=Enterprise Clothing Export E-commerce Platform
SITE_URL=https://yxlp.com

# 分析配置
GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
GOOGLE_TAG_MANAGER_ID=GTM-XXXXXXX

# 错误报告
ERROR_REPORTING=true
DEBUG_MODE=false
